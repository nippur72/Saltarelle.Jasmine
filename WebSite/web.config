<?xml version="1.0"?>
<configuration>
  <system.webServer>
    <security>
      <requestFiltering>
        <fileExtensions>
          <remove fileExtension=".mdb"/>
        </fileExtensions>
      </requestFiltering>
    </security>
  </system.webServer>
  <system.web>
    <sessionState cookieless="false" timeout="20"/>
